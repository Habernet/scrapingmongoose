{{!-- // here we will receive an array of articles for displaying on the main page --}}
{{!-- 
Title, image
View Article button, save article button --}}


{{!-- For each article we recieve..make a basic card with the title, image, view article link and save button --}}

<div class="container">
    {{#each articles}}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <div class="row">
                        <div class="col s6">
                            <span class="card-title"> {{this.headline}} </span>
                            <img src="{{this.imageURL}}" alt="">
                        </div>
                        <div class="col s6">
                            <p>{{this.articleSummary}}</p>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    {{!-- When you grab the URL, it goes here --}}
                    <a class="waves-effect waves-light btn-small" href="{{this.articleURL}}">View Article</a>
                    <a data-id="{{this._id}}" class="save waves-effect waves-light btn-small"><i
                            class="material-icons right">cloud</i>Save This Article</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>