{{!-- // this will receive an array of saved articles for displaying --}}

{{!-- Title, image --}}
{{!-- view article button, comments button, delete from saved button --}}


<div class="container">
    {{#each articles}}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"> {{this.headline}} </span>
                    <img src="{{this.imageURL}}" alt="">
                </div>
                <div class="card-action">
                    {{!-- When you grab the URL, it goes here --}}
                    <a class="waves-effect waves-light btn-small">View Article</a>
                    <button data-id="{{this._id}}" class="btn waves-effect waves-light">Comment
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>