{{!-- // this will receive an array of saved articles for displaying --}}

{{!-- Title, image --}}
{{!-- view article button, comments button, delete from saved button --}}


<div class="container">
    {{#each savedArticles}}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <div class="row">
                        <div class="col s6">
                            <span class="card-title"> {{this.headline}} </span>
                            <img src="{{this.imageURL}}" alt="">
                        </div>
                        <div class="col s6">
                            <p>{{this.articleSummary}}</p>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    {{!-- When you grab the URL, it goes here --}}
                    <a class="waves-effect waves-light btn-small" href="{{this.articleURL}}">View
                        Article</a>
                    <a data-id="{{this._id}}" class="delete waves-effect waves-light btn-small">Delete this article</a>
                    <button data-id="{{this._id}}" data-target="comments"
                        class="view-comments btn waves-effect waves-light modal-trigger">View Comments
                        <i class="material-icons right">send</i>
                    </button>
                    {{!-- modal --}}
                    <div id="comments" class="modal">
                        <div class="modal-content">
                            <h4 class="modal-title"></h4>
                            <div class="comments-section">
                                {{!-- Comments go here --}}
                            </div>
                        </div>
                        {{!-- Area for people to input new comments --}}
                        <textarea id="comment-input" class="materialize-textarea"></textarea>
                        <div class="modal-footer">
                            {{!-- Modal buttons go here --}}
                            <button class="modal-action modal-close waves-effect waves-green btn">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}
</div>